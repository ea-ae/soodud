[flake8]
max-line-length = 120
max-complexity = 20
docstring-convention = google
ignore =
    F403  # 'from module import *' used; unable to detect undefined names
    F405  # Name may be undefined, or defined from star imports: moduile
    D100  # Missing docstring in public package
    D101  # Missing docstring in public class
    D102  # Missing docstring in public class
    D104  # Missing docstring in public package
    D102  # Missing docstring in public package
    E265  # Block comment should start with '# '
    F401  # Package imported but unused

